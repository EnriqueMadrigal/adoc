<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/include"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/toolbar_height"
        app:titleTextColor="@android:color/white"
        android:background="@color/AppAdocYellow"
        android:theme="@style/Theme.FixedSize">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_image_height"
            android:layout_gravity="center"
            android:src = "@drawable/banner_adoc"/>

        <ImageButton
            android:id="@+id/button_notifications"
            android:layout_width="@dimen/toolbar_image_width"
            android:layout_height="@dimen/toolbar_image_height"
            android:layout_gravity="right"
            android:src = "@drawable/ic_notification_foreground"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"/>


    </androidx.appcompat.widget.Toolbar>




    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <FrameLayout
            android:id="@+id/fragment_containerMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />




    </RelativeLayout>


</LinearLayout>