<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegisterPage1">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">



            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0.7"
                    android:src="@drawable/puntos1"
                    tools:layout_editor_absoluteX="147dp"
                    tools:layout_editor_absoluteY="25dp" />
            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/Title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registrarme"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    />



            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/input_name"
                    android:inputType="textNoSuggestions"
                    style="@style/InputGeneral"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nombre"
                    android:background="@drawable/roundtext" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/input_lastname"
                    android:inputType="textNoSuggestions"
                    style="@style/InputGeneral"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/apellidos"
                    android:background="@drawable/roundtext" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <Spinner
                    style="@style/InputGeneral"
                    android:id="@+id/spinner_countries"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:textColor="@color/AppAdocGray"
                    android:background="@drawable/roundtext"
                    >

                </Spinner>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <Spinner
                    style="@style/InputGeneral"
                    android:focusedByDefault="false"
                    android:id="@+id/spinner_documentos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:textColor="@color/AppAdocGray"
                    android:background="@drawable/roundtext"
                    >

                </Spinner>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/input_numdocumento"
                    android:inputType="textNoSuggestions"
                    style="@style/InputGeneral"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nodocumento"
                    android:background="@drawable/roundtext" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/input_email"
                    style="@style/InputGeneral"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/roundtext" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/input_password"
                    style="@style/InputGeneral"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/contrasena"
                    android:inputType="textPassword"
                    android:background="@drawable/roundtext" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/input_cpassword"
                    style="@style/InputGeneral"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirmar"
                    android:inputType="textPassword"
                    android:background="@drawable/roundtext" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />



            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    style="@style/Title3"
                    android:paddingStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camposrequeridos"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/check_politica"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/check_off"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/text_politica"
                    android:clickable="true"
                    style="@style/Title3"
                    android:paddingStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/politicadatos"
                    />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/check_terminos"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/check_off"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/text_terminos"
                    android:clickable="true"
                    style="@style/Title3"
                    android:paddingStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terminos"
                    />



            </LinearLayout>






            <LinearLayout
            android:id="@+id/LineaMarcas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

        </LinearLayout>







        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                />


                <androidx.appcompat.widget.AppCompatButton
                    style="@style/roounded_button"
                    android:id="@+id/Siguiente_Pag2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/registrarme"
                    />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />



            </LinearLayout>







        </LinearLayout>


    </ScrollView>





</FrameLayout>