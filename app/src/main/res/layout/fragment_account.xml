            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/numtelefono"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="0dp"
            android:weightSum="2">

            <Spinner
